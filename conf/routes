# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

GET  /                              controllers.HomeController.login

GET /main                          controllers.HomeController.main(request : Request)

GET /highscore                      controllers.HomeController.highscore(request : Request)

GET /profile                        controllers.HomeController.profile(request : Request)

GET /defaultGame                    controllers.HomeController.defaultGame(request : Request)

GET /store                          controllers.HomeController.store(request : Request)

GET /gameLevelTwo                   controllers.HomeController.gameLevelTwo(request : Request)

GET /gameLevelTwoMemory             controllers.HomeController.gameLevelTwoMemory(request : Request)

GET /forgotPassword                 controllers.HomeController.forgotPassword

GET /createAccount                  controllers.HomeController.createAccount

POST /checkCreateAccount            controllers.HomeController.checkCreateAccount(request : Request)

GET /dictionary                     controllers.HomeController.dictionary(request: Request)

POST /auth                          controllers.HomeController.checklogin(request : Request)

POST /getMoney                      controllers.HomeController.requestMoney(request : Request)

GET /api/coffees                    controllers.APIController.getCoffees

GET /api/ingredients                controllers.APIController.getIngredients


