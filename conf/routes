# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

GET  /                              controllers.HomeController.login

GET /main                          controllers.HomeController.main

GET /highscore                      controllers.HomeController.highscore

GET /profile                        controllers.HomeController.profile

GET /defaultGame                    controllers.HomeController.defaultGame

GET /store                          controllers.HomeController.store

GET /gameLevelTwo                   controllers.HomeController.gameLevelTwo

GET /gameLevelTwoMemory             controllers.HomeController.gameLevelTwoMemory

GET /dictionary                     controllers.HomeController.dictionary


POST /auth                          controllers.HomeController.checklogin(request : Request)

